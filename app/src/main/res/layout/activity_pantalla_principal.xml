<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PantallaPrincipal"
    android:background="#444E87">

    <TextView
        android:id="@+id/PP_Titulo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/black"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:text="iAccesories"
        android:paddingVertical="10dp"
        android:gravity="center"
        android:textSize="25sp" />


    <FrameLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/bottom_navegation"
        android:layout_marginBottom="-2dp" >
    </FrameLayout>

    <TextView
        android:id="@+id/Bienvenidos"
        android:layout_width="wrap_content"
        android:layout_height="76dp"
        android:layout_below="@+id/PP_Titulo"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="50px"
        android:layout_marginTop="50px"
        android:text="Bienvenidos!"
        android:textColor="@color/white"
        android:textSize="80px" />

    <TextView
        android:id="@+id/Descripcion"
        android:layout_width="950px"
        android:layout_height="800px"
        android:layout_below="@+id/Bienvenidos"
        android:layout_marginLeft="50px"
        android:layout_marginTop="50px"
        android:layout_marginRight="50px"
        android:lineSpacingExtra="8dp"
        android:gravity="center_horizontal"
        android:text="IAccesories es una aplicación web que tiene como objetivo proporcionar información actualizada sobre Inteligencia Artificial (IA) a sus usuarios. Los usuarios pueden registrarse para acceder a noticias y artículos relacionados con el tema de la IA. Además, IAccesories ofrece un foro donde los usuarios pueden interactuar y discutir sobre la IA, compartir opiniones y conocimientos. La aplicación busca ser una plataforma para que los usuarios interesados en la IA puedan conectarse, aprender y crecer en su comprensión de la tecnología emergente."
        android:textColor="@color/white"
        android:textSize="40px" />



    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navegation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="-1dp"
        android:background="@color/black"
        app:itemTextColor="@color/white"
        app:menu="@menu/bottom_nav_menu" />


</RelativeLayout>
